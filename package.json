{
  "name": "a-remarkable-browser-extension",
  "displayName": "A remarkable browser extension",
  "version": "0.0.1",
  "description": "Your one-in-all solution for synchronizing web documents with your your  reMarkable tablet.",
  "author": "Alberto Hernandez Cerezo",
  "scripts": {
    "build": "plasmo build",
    "package": "plasmo package",
    "build:plasmo": "plasmo build",
    "build:tailwind": "npx @tailwindcss/cli --postcss ./config/postcss.config.cjs -i ./assets/css/tailwind.css -o ./assets/css/style.css -c ./config/tailwind.config.mjs --minify",
    "dev:standard": "standard",
    "dev:lint": "npx eslint --config config/eslint.config.js src",
    "dev:plasmo": "plasmo dev",
    "dev:storybook": "storybook dev -p 6006",
    "dev:tailwind": "npx @tailwindcss/cli --postcss ./config/postcss.config.js -i ./assets/css/tailwind.css -o ./assets/css/style.css -c ./config/tailwind.config.js --watch",
    "dev": "npx concurrently --kill-others \"yarn run dev:tailwind\" \"yarn run dev:plasmo\" \"yarn run dev:storybook\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "node --experimental-vm-modules node_modules/.bin/jest --config=test/jest.config.js --verbose"
  },
  "dependencies": {
    "@polkadot/x-textencoder": "^13.5.3",
    "@tailwindcss/postcss": "^4.1.12",
    "autoprefixer": "^10.4.21",
    "base64-js": "^1.5.1",
    "crc-32": "^1.2.2",
    "jwt-decode": "^4.0.0",
    "plasmo": "0.90.5",
    "postcss": "^8.5.3",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^16.1.1",
    "postcss-nested": "^7.0.2",
    "postcss-preset-env": "^10.3.1",
    "postcss-scss": "^4.0.9",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "tailwindcss": "^4.1.12",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@clack/core": "^0.5.0",
    "@clack/prompts": "^0.11.0",
    "@eslint/js": "^9.31.0",
    "@ianvs/prettier-plugin-sort-imports": "4.7.0",
    "@jest/globals": "^30.0.5",
    "@pollyjs/adapter-fetch": "^6.0.7",
    "@pollyjs/adapter-node-http": "^6.0.6",
    "@pollyjs/core": "^6.0.6",
    "@pollyjs/persister-fs": "^6.0.6",
    "@storybook/addon-docs": "^9.0.14",
    "@storybook/addon-onboarding": "^9.0.14",
    "@storybook/addon-webpack5-compiler-swc": "^3.0.0",
    "@storybook/react-webpack5": "^9.0.14",
    "@types/chrome": "0.1.12",
    "@types/node": "24.5.2",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "commander": "^14.0.0",
    "dotenv": "^17.2.0",
    "eslint": ">=9.25.0",
    "eslint-config-xo": "^0.47.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "jest": "^30.0.4",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "3.6.2",
    "shelljs": "^0.10.0",
    "standard": "^17.1.2",
    "storybook": "^9.1.3",
    "typescript": "5.9.2"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ]
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "type": "module",
  "jest": {
    "transform": {}
  }
}
